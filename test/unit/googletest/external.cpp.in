#include <cstddef>

#include <gtest/gtest.h>

#include "dbutils.h"
#include "external.h"

static size_t bad_filename(char **dst, const size_t dst_size,
                           const char *, const size_t,
                           struct work *) {
    return SNPRINTF(*dst, dst_size, "@CMAKE_BINARY_DIR@");
}

TEST(external, concatenate) {
    // type is used when querying the external database table,
    // not for attching the individual external databases
    const char type[] = "test";
    const std::size_t type_len = sizeof(type) - 1;

    #define VIEWNAME "testview"
    const std::size_t viewname_len = sizeof(VIEWNAME) - 1;
    const char select[] = " SELECT * FROM ";
    const std::size_t select_len = sizeof(select) - 1;
    const std::size_t externaldbs_len = sizeof(EXTERNAL_DBS) - 1;
    const char drop_view[] = "DROP VIEW " VIEWNAME ";";

    #if defined(DEBUG) && defined(CUMULATIVE_TIMES)
    std::size_t query_count = 0;
    #endif

    EXPECT_EQ(external_concatenate(nullptr, nullptr,
                                   type, type_len,
                                   VIEWNAME, viewname_len,
                                   select, select_len,
                                   EXTERNAL_DBS, externaldbs_len,
                                   nullptr), -1);

    sqlite3 *db = opendb(":memory:", SQLITE_OPEN_CREATE | SQLITE_OPEN_READWRITE, 0, 0,
                         create_external_tables, nullptr);
    ASSERT_NE(db, nullptr);

    // nothing in external_dbs, so goes directly to create empty view
    EXPECT_EQ(external_concatenate(nullptr, db,
                                   type, type_len,
                                   VIEWNAME, viewname_len,
                                   select, select_len,
                                   EXTERNAL_DBS, externaldbs_len,
                                   nullptr), 0);

    external_concatenate_cleanup(db, drop_view,
                                 type, type_len
                                 #if defined(DEBUG) && defined(CUMULATIVE_TIMES)
                                 , &query_count
                                 #endif
        );

    // add one external db to run attach concatenate
    EXPECT_EQ(sqlite3_exec(db, "INSERT INTO " EXTERNAL_DBS_PWD " (type, filename, attachname) VALUES ('test', '@CMAKE_CURRENT_BINARY_DIR@', 'attachname');",
                           nullptr, nullptr, nullptr), SQLITE_OK);

    // no modify_filename, so attempt to attach CMAKE_CURRENT_BINARY_DIR and fail
    EXPECT_EQ(external_concatenate(nullptr, db,
                                   type, type_len,
                                   VIEWNAME, viewname_len,
                                   select, select_len,
                                   EXTERNAL_DBS, externaldbs_len,
                                   nullptr), 0);

    external_concatenate_cleanup(db, drop_view,
                                 type, type_len
                                 #if defined(DEBUG) && defined(CUMULATIVE_TIMES)
                                 , &query_count
                                 #endif
        );

    // modify_filename changes the filename to CMAKE_BINARY_DIR which fails to attach
    EXPECT_EQ(external_concatenate(nullptr, db,
                                   type, type_len,
                                   VIEWNAME, viewname_len,
                                   select, select_len,
                                   EXTERNAL_DBS, externaldbs_len,
                                   bad_filename), 0);

    external_concatenate_cleanup(db, drop_view,
                                 type, type_len
                                 #if defined(DEBUG) && defined(CUMULATIVE_TIMES)
                                 , &query_count
                                 #endif
        );

    sqlite3_close(db);
}
