set -e
source @CMAKE_CURRENT_BINARY_DIR@/setup.sh 1

OUTPUT="longitudinal_snapshot_DT.out"

SNAPSHOT="longitudinal_snapshot_DT.db"

cleanup() {
    rm -rf "${SNAPSHOT}"
}

cleanup_exit() {
    cleanup
    setup_cleanup
}

trap cleanup_exit EXIT

cleanup

(
do_tests() {
    cleanup

    run_no_sort "${LONGITUDINAL_SNAPSHOT_DT} --help" | replace_argparse

    # shellcheck disable=SC2294
    eval "$@"

    run_no_sort "${LONGITUDINAL_SNAPSHOT_DT} \"${INDEXROOT}\" \"${SNAPSHOT}\" --gufi_query=\"${GUFI_QUERY}\" --verbose --notes 'test notes'" | sed 's/time, [0-9]*)/time), now/g'

    echo "# running a second time on the same target will error because the tables already exist"
    run_no_sort "${LONGITUDINAL_SNAPSHOT_DT} \"${INDEXROOT}\" \"${SNAPSHOT}\" --gufi_query=\"${GUFI_QUERY}\" --notes 'test notes'"

    echo "# use --replace to replace existing data"
    run_no_sort "${LONGITUDINAL_SNAPSHOT_DT} \"${INDEXROOT}\" \"${SNAPSHOT}\" --gufi_query=\"${GUFI_QUERY}\" --notes 'test notes' --replace"

    run_no_sort "${SQLITE3} \"${SNAPSHOT}\" \".tables\""

    tables=("metadata" "summary" "treesummary" "snapshot")
    for table in "${tables[@]}"
    do
        run_no_sort "${SQLITE3} \"${SNAPSHOT}\" \"PRAGMA TABLE_INFO(${table});\""
    done

    for table in "${tables[@]}"
    do
        run_no_sort "${SQLITE3} \"${SNAPSHOT}\" \"SELECT COUNT(*) FROM ${table};\""
    done

    run_no_sort "${SQLITE3} \"${SNAPSHOT}\" \"SELECT notes FROM metadata;\""

    run_no_sort "${SQLITE3} \"${SNAPSHOT}\" \"SELECT depth, name, size_sum, ts_totsize, totsubdirs, ts_totsubdirs, totfiles, ts_totfiles, totlinks, ts_totlinks FROM snapshot ORDER BY depth ASC, name ASC;\""
}

do_tests "run_no_sort \"${GUFI_TREESUMMARY_ALL} ${INDEXROOT}\" 2>&1 > /dev/null" | tee "${OUTPUT}"
@DIFF@ @CMAKE_CURRENT_BINARY_DIR@/longitudinal_snapshot_DT.expected "${OUTPUT}"

do_tests "run_no_sort \"${GUFI_ROLLUP} ${INDEXROOT}\" 2>&1 > /dev/null" | tee "${OUTPUT}"
@DIFF@ @CMAKE_CURRENT_BINARY_DIR@/longitudinal_snapshot_DT.expected "${OUTPUT}"
)

rm "${OUTPUT}"
